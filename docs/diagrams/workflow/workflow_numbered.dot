
digraph AgenticInfraOps {
    // Graph settings - WIDESCREEN HORIZONTAL
    graph [
        bgcolor="#1a1a2e"
        fontcolor="white"
        fontname="Segoe UI, Arial, sans-serif"
        pad="0.8"
        splines="ortho"
        nodesep="0.6"
        ranksep="1.0"
        rankdir="LR"
        dpi="150"
    ]
    
    node [
        fontname="Segoe UI, Arial, sans-serif"
        fontsize="11"
        fontcolor="white"
        style="filled,rounded"
        shape="box"
        penwidth="0"
        margin="0.2,0.12"
    ]
    
    edge [
        color="#64748b"
        fontcolor="#94a3b8"
        fontname="Segoe UI, Arial, sans-serif"
        fontsize="9"
        penwidth="2"
        arrowsize="0.7"
    ]

    // ============================================
    // STEP 1: PLAN
    // ============================================
    step1 [
        label="1. Plan\n@plan (built-in)"
        fillcolor="#0078D4"
        width="2"
    ]

    // ============================================
    // STEP 2: ARCHITECTURE  
    // ============================================
    step2 [
        label="2. Architecture\nazure-principal-architect"
        fillcolor="#FF6B35"
        width="2.5"
    ]
    
    // Step 2 optional tools (horizontal row)
    step2a [
        label="2a. Visualize\ndiagram-generator"
        fillcolor="#8b5cf6"
    ]
    
    step2b [
        label="2b. Estimate\nAzure Pricing MCP"
        fillcolor="#fbbf24"
        fontcolor="#1a1a2e"
    ]
    
    step2c [
        label="2c. Document\nadr-generator"
        fillcolor="#14b8a6"
    ]

    // ============================================
    // STEP 3: BICEP PLANNING
    // ============================================
    step3 [
        label="3. Plan Infrastructure\nbicep-plan"
        fillcolor="#10b981"
        width="2.2"
    ]

    // ============================================
    // STEP 4: CODE GENERATION
    // ============================================
    step4 [
        label="4. Generate Code\nbicep-implement"
        fillcolor="#ec4899"
        width="2.2"
    ]
    
    step4a [
        label="4a. Document\nadr-generator"
        fillcolor="#14b8a6"
    ]

    // ============================================
    // STEP 5: DEPLOY
    // ============================================
    step5 [
        label="5. Deploy"
        fillcolor="#0078D4"
        width="1.8"
    ]

    // ============================================
    // MAIN FLOW (solid arrows)
    // ============================================
    step1 -> step2 [color="#0078D4"]
    step2 -> step3 [color="#FF6B35"]
    step3 -> step4 [color="#10b981"]
    step4 -> step5 [color="#ec4899"]

    // ============================================
    // OPTIONAL CONNECTIONS (dashed arrows)
    // ============================================
    // Step 2 optional tools
    step2a -> step2 [style="dashed" color="#8b5cf6" dir="back"]
    step2b -> step2 [style="dashed" color="#fbbf24" dir="back"]
    step2c -> step2 [style="dashed" color="#14b8a6" dir="back"]
    
    // Step 4 optional
    step4a -> step4 [style="dashed" color="#14b8a6" dir="back"]

    // ============================================
    // LAYOUT HINTS - Horizontal layout
    // ============================================
    // Optional tools above their parent steps
    { rank=same; step2a; step2b; step2c }
    { rank=same; step4a }
    
    // Invisible edges for vertical alignment of optionals
    step2a -> step2b -> step2c [style="invis"]
}
