
digraph SimpleWorkflow {
    graph [
        bgcolor="#1a1a2e"
        fontcolor="white"
        fontname="Segoe UI, Arial, sans-serif"
        pad="0.4"
        splines="ortho"
        nodesep="0.4"
        ranksep="0.5"
        rankdir="LR"
        dpi="150"
    ]
    
    node [
        fontname="Segoe UI, Arial, sans-serif"
        fontsize="10"
        fontcolor="white"
        style="filled,rounded"
        shape="box"
        penwidth="0"
        margin="0.15,0.1"
    ]
    
    edge [
        color="#64748b"
        penwidth="2"
        arrowsize="0.6"
    ]
    
    // Main workflow
    s1 [label="1. Plan" fillcolor="#0078D4"]
    s2 [label="2. Architect" fillcolor="#FF6B35"]
    s3 [label="3. Plan Infra" fillcolor="#10b981"]
    s4 [label="4. Generate" fillcolor="#ec4899"]
    s5 [label="5. Deploy" fillcolor="#0078D4"]
    
    // Optional
    opt [label="2a-c: Diagrams | Pricing | ADRs" fillcolor="#8b5cf6" fontsize="9"]
    
    // Flow
    s1 -> s2 -> s3 -> s4 -> s5
    
    // Optional connection
    opt -> s2 [style="dashed" color="#8b5cf6" constraint="false"]
}
